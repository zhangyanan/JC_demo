/*simple_table*/
.simpleTable {width:100%; cellspacing:0; cellpadding:0;border:1px solid #bccbdd}
.simpleTable th{background:url(<%= asset_path 'tbg.gif'%>); line-height:26px; border-left: solid 1px #bccbdd;border-top: solid 1px #bccbdd;border-bottom: solid 1px #bccbdd; text-align:center; font-weight:bolder; font-size:12px; color:#15428b; cursor:hand;}
.simpleTable .white{background:white;}
.simpleTable .blue{background:#e6f0f9;}
.simpleTable .tab_firstline{background:url(<%= asset_path 'tbg.gif'%>); line-height:26px; border-left: solid 1px #bccbdd;border-top: solid 1px #bccbdd;border-bottom: solid 1px #bccbdd; text-align:center; font-weight:bolder; font-size:12px; color:#15428b; cursor:hand;}
.simpleTable .tab_firstline_last{background:url(tbg.gif); line-height:26px; border :solid 1px #bccbdd;text-align:center; font-weight:bolder;font-size:12px; color:#15428b;cursor:hand;}
.simpleTable .td1{border-left: solid 0px #bccbdd; text-align:center; font-size:12px;color:#15428b;}
