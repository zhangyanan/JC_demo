<h1>Listing cards</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Employee</th>
    <th>Card number</th>
    <th>Created at</th>
    <th>Update at</th>
    <th>Lost at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.id %></td>
    <td><%= card.employee_id %></td>
    <td><%= card.card_number %></td>
    <td><%= card.created_at %></td>
    <td><%= card.update_at %></td>
    <td><%= card.lost_at %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

