<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <title>新建菜单</title>
</head>
<style type="text/css">
    <!--
    .STYLE1 {
        color: #15428b;
        font-size: 12px;
    }

    body {
        width: 100%;
        margin: 0 auto;
        text-align: left;
        background: white;
    }

    -->
</style>
<body>
<%= title_bar %>
<%= form_for @menu, {:url => {:action => (@menu.id ? :update : :create)}} do |f| %>
    <fieldset style="width:35%;margin-left:300px;margin-top:100px;">
      <table class="resultTable">
        <tr>
          <td align="right">菜单名称:</td>
          <td><%= f.text_field :name, :size => "30", :class => "input_text" %></td>
        </tr>
        <tr>
        <td align="right">父级菜单:</td>
        <td><%= f.select :parent_menu_id,@parent_menus.collect{|parent|[parent.name,parent.id]} ,:size => "30", :class => "input_text" %></td>
      </tr>
        <tr>
          <td align="right">对应权限:</td>
          <td><%= f.select :right,@rights, :size => "30", :class => "input_text" %></td>
        </tr>
        <tr>
          <td colspan="2" align="center">
            <%= f.submit "保存", :class => "button_blue" %>
            <%= f.button '重置', :class => "button_blue" %>
          </td>
        </tr>
      </table>
    </fieldset>
<% end %>
</body>
</html>
